{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagens/edit" method="post"><br>
            <input type="hidden" value="{{postagem._id}}" name="id">
            <input type="hidden" id="categorianame" value="{{postagem.categoria}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug"  class="form-control" value="{{postagem.slug}}" pattern="[a-z\-]+$" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" id="categoriaselecionada">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <script type="text/javascript">  
                let categoria = document.getElementById("categorianame").value;
                document.getElementById("categoriaselecionada").value = categoria;
            </script>
            <br>
            <button type="submit" class="btn btn-success">Editar postagem</button>
        </form>
    </div>
</div>